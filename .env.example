# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fatos_pro?schema=public"

# Payment Systems (Требование 20.6: секретные ключи в переменных окружения)
YUKASSA_SHOP_ID=""
YUKASSA_SECRET_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security (Требование 20.3: CSRF защита)
