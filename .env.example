# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fatos_pro?schema=public"

# Payment Systems (Требование 20.6: секретные ключи в переменных окружения)
YUKASSA_SHOP_ID=""
YUKASSA_SECRET_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security (Требование 20.3: CSRF защита)
# Разрешенные origins для CSRF защиты (через запятую)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Session Security
# Секретный ключ для подписи сессий (генерируйте случайную строку)
SESSION_SECRET="your-secret-key-here-change-in-production"

# Rate Limiting
# Включить/выключить rate limiting (true/false)
RATE_LIMIT_ENABLED="true"

# Advanced Authentication
# Encryption secret for OAuth tokens and TOTP secrets (generate a random 32+ character string)
ENCRYPTION_SECRET="your-encryption-secret-here-change-in-production-min-32-chars"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key_here"
EMAIL_FROM="FATOS.pro <noreply@fatos.pro>"

# OAuth - Google
GOOGLE_OAUTH_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-client-secret"

# OAuth - Facebook
FACEBOOK_OAUTH_CLIENT_ID="your-facebook-app-id"
FACEBOOK_OAUTH_CLIENT_SECRET="your-facebook-app-secret"

# OAuth Redirect URL
OAUTH_REDIRECT_BASE_URL="http://localhost:3002"

# Base URL for email links
NEXT_PUBLIC_BASE_URL="http://localhost:3002"

# Cron Jobs Security
# Secret for authenticating cron job requests (generate a random string)
CRON_SECRET="your-cron-secret-here-change-in-production"

# Monitoring & Analytics
# Sentry (Error Monitoring)
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxxx@o123456.ingest.sentry.io/123456"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="fatos-pro"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
